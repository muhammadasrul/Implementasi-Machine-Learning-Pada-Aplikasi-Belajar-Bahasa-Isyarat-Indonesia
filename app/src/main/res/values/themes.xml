<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Skripsi" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/tfe_color_primary_dark</item>
        <item name="colorAccent">@color/tfe_color_accent</item>
        <!-- Primary brand color. -->
        <!--        <item name="colorPrimary">@color/purple_500</item>-->
        <!--        <item name="colorPrimaryVariant">@color/purple_700</item>-->
        <!--        <item name="colorOnPrimary">@color/white</item>-->
        <!-- Secondary brand color. -->
        <!--        <item name="colorSecondary">@color/teal_200</item>-->
        <!--        <item name="colorSecondaryVariant">@color/teal_700</item>-->
        <!--        <item name="colorOnSecondary">@color/black</item>-->
        <!-- Status bar color. -->
<!--        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>-->
        <item name="android:statusBarColor">@color/color_background</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="CustomButtonStroke" parent="ThemeOverlay.AppCompat">
        <item name="cornerRadius">28dp</item>
        <item name="android:layout_height">58dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="strokeColor">@android:color/white</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="strokeWidth">1dp</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="CustomButtonSolid" parent="ThemeOverlay.AppCompat">
        <item name="cornerRadius">28dp</item>
        <item name="android:layout_height">58dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="backgroundTint">@color/color_yellow</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="CustomForm" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomEnd">28dp</item>
        <item name="boxCornerRadiusBottomStart">28dp</item>
        <item name="boxCornerRadiusTopEnd">28dp</item>
        <item name="boxCornerRadiusTopStart">28dp</item>
        <item name="boxStrokeColor">@color/color_primary</item>
    </style>

    <style name="CustomFormPassword" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomEnd">28dp</item>
        <item name="boxCornerRadiusBottomStart">28dp</item>
        <item name="boxCornerRadiusTopEnd">28dp</item>
        <item name="boxCornerRadiusTopStart">28dp</item>
        <item name="boxStrokeColor">@color/color_primary</item>
        <item name="endIconMode">password_toggle</item>
        <item name="endIconCheckable">true</item>
        <item name="endIconDrawable">@drawable/password_selector</item>
    </style>

    <style name="CustomButtonSecondary" parent="ThemeOverlay.AppCompat">
        <item name="cornerRadius">12dp</item>
        <item name="backgroundTint">#EFE4FB</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="textAllCaps">false</item>
        <item name="elevation">0dp</item>
        <item name="android:textColor">@color/color_primary</item>
    </style>

    <style name="CustomButtonWord" parent="ThemeOverlay.AppCompat">
        <item name="cornerRadius">28dp</item>
        <item name="backgroundTint">@color/color_primary</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="textAllCaps">false</item>
        <item name="elevation">0dp</item>
        <item name="strokeColor">@android:color/white</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
</resources>